# UWM computers
gdb () {
    
    # check grid proxy
    grid-proxy-info -e > /dev/null 2>&1
    if [[ "$?" -ne 0 ]]; then
        echo "ERROR: no grid proxy. Run ligo-proxy-init."
        return
    fi

    # if more than 2 args and 2nd is not -g, fail
    if [[ "$#" -eq 2 ]] && [[ "$2" != "-g" ]]; then
        echo "ERROR: 2nd argument should be '-g', not be '$2'"
        return
    fi

    # Defaults
    local GRACEDB_USER="gracedb"
    local DOMAIN="ligo.org"
    local HELPTEXT='USAGE:\n\tgdb [suffix] [-g]'

    # Set up user
    local user=""
    local gdb_bool=0
    if [[ "$@" =~ "-g" ]]; then
        user=${GRACEDB_USER}
        gdb_bool=1
    else
        # Hacky method for getting username from grid cert
        user=$(grid-proxy-info -s | awk '{print $3}' | awk -F'@' '{print $1}')
    fi

    # Set up hostname
    local host="gracedb"
    if ([[ "$#" -gt 1 ]] && [[ "$1" == "-g" ]]) || [[ "$#" -gt 2 ]]; then
        echo -e ${HELPTEXT}
        return
    elif ([[ "${gdb_bool}" -eq 1 ]] && [[ "$#" -eq 2 ]]) || 
         ([[ "${gdb_bool}" -eq 0 ]] && [[ "$#" -eq 1 ]]); then
        host+="-$1"
    fi
    host+=".${DOMAIN}"

    gsissh -YA ${user}@${host}
}
